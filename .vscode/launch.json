// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Extension Only",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "preLaunchTask": "npm: watch",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            }
        },
        {
            "name": "Python Attach",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 3
            }
        },
        {
            "name": "DO NOT SELECT (only for python tests run via test explorer)",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "purpose": ["debug-test"],
            "justMyCode": true,
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 4
            }
        },
        {
            "name": "DO NOT SELECT (Debug Extension With Python Code)",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "env": {
                "USE_DEBUGPY": "True"
            },
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 4
            }
        },
        {
            "name": "DO NOT SELECT (Python listen)",
            "type": "python",
            "request": "attach",
            "listen": { "host": "localhost", "port": 5678 },
            "justMyCode": true,
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 4
            }
        }
    ],
    "compounds": [
        {
            "name": "Debug Extension and Python",
            "configurations": ["DO NOT SELECT (Python listen)", "DO NOT SELECT (Debug Extension With Python Code)"],
            "stopAll": true,
            "preLaunchTask": "npm: watch",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ]
}
