{
    "name": "<pytool-module>",
    "displayName": "<pytool-display-name>",
    "description": "Linting support for python files using `<pytool-module>`.",
    "version": "2022.3.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "<pytool-display-name>",
        "module": "<pytool-module>"
    },
    "publisher": "<my-publisher>",
    "license": "MIT",
    "homepage": "https://github.com/<my-github>/<my-extension-project>",
    "repository": {
        "type": "git",
        "url": "https://github.com/<my-github>/<my-extension-project>.git"
    },
    "bugs": {
        "url": "https://github.com/<my-github>/<my-extension-project>/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "linting",
        "<pytool-module>"
    ],
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:*.py",
        "onCommand:<pytool-module>.restart"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o <pytool-module>.vsix"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "<pytool-module>.logLevel": {
                    "default": "error",
                    "description": "The log level the extension logs at, defaults to 'error'",
                    "enum": [
                        "debug",
                        "error",
                        "info",
                        "off",
                        "warn"
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "<pytool-module>.args": {
                    "default": [],
                    "description": "Arguments passed in. Each argument is a separate item in the array.",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "<pytool-module>.path": {
                    "default": [],
                    "description": "When set to a path to <pytool-module> binary, extension will use that for linting. NOTE: Using this option may slowdown linting.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "<pytool-display-name>",
                "command": "<pytool-module>.restart"
            }
        ]
    },
    "dependencies": {
        "fs-extra": "^10.1.0",
        "vscode-languageclient": "7.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/vscode": "1.64.0",
        "@types/glob": "^7.2.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "prettier": "^2.7.1",
        "typescript": "^4.7.4",
        "ts-loader": "^9.3.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "vsce": "^2.9.1"
    }
}
